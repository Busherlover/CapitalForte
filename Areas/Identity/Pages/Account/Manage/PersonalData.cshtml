@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
<div class="cenetered">
    <div class="col-md-9">
        <h3 >@ViewData["Title"]</h3>
        <p style=" font-size: 30px;">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p>
            <strong style=" font-size: 30px">Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>

        <div style="display: flex; gap: 10px;">
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="btn btn-primary" type="submit">Download</button>
        </form>
        
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
